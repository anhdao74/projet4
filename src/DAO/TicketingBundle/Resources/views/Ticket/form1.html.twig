{# src/DAO/TicketingBundle/Resources/views/Ticket/form1.html.twig #}


<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {# Les erreurs générales du formulaire. #}
  {{ form_errors(form) }}

  <div class="form-group">
    {# Génération du label. #}
    {{ form_label(form.nomVisiteur, "Nom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

    {# Affichage des erreurs pour ce champ précis. #}
    {{ form_errors(form.nomVisiteur) }}

    <div class="col-sm-10">
      {# Génération de l'input. #}
      {{ form_widget(form.nomVisiteur, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  <div class="form-group">
    {{ form_label(form.prenomVisiteur, "Prénom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.prenomVisiteur) }}
    <div class="col-sm-10">
      {{ form_widget(form.prenomVisiteur, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  <div class="form-group">
    {{ form_label(form.pays, "Pays", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.pays) }}
    <div class="col-sm-10">
      {{ form_widget(form.pays, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  <div class="form-group">
    {{ form_label(form.birthVisiteur, "Date de naissance", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.birthVisiteur) }}
    <div class="col-sm-10">
      {{ form_widget(form.birthVisiteur, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  <div class="form-group">
    {{ form_label(form.reduced, "Tarif réduit", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.reduced) }}
    <div class="col-sm-10">
      {{ form_widget(form.reduced, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

    




  